<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">

    <ImageView
        android:id="@+id/ivEmptyUser"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_give"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_pesan"
        style="@style/regular_black"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:text="Halo Relawan sejati, Terima kasih atas partisipasi nya. Karena setetes darah mu dapat menyelamatkan seseorang"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivEmptyUser" />


    <Button
        android:id="@+id/home"
        style="@style/bold_white"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_red"
        android:text="Home"
        android:layout_marginTop="123dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_pesan"
        app:layout_constraintStart_toStartOf="@+id/tv_pesan"
        app:layout_constraintTop_toBottomOf="@+id/tv_pesan" />

</androidx.constraintlayout.widget.ConstraintLayout>