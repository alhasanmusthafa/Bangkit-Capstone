<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_goldar"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:boxCornerRadiusBottomEnd="30dp"
        app:boxCornerRadiusBottomStart="30dp"
        app:boxCornerRadiusTopEnd="30dp"
        app:boxCornerRadiusTopStart="30dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <AutoCompleteTextView
            android:id="@+id/input_goldar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:hint="Golongan Darah"
            style="@style/regular_black"/>

    </com.google.android.material.textfield.TextInputLayout>

    <GridLayout
        android:id="@+id/layout_rhesus"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:columnOrderPreserved="false"
        android:rowCount="1"
        app:layout_constraintEnd_toEndOf="@+id/layout_goldar"
        app:layout_constraintStart_toStartOf="@+id/layout_goldar"
        app:layout_constraintTop_toBottomOf="@+id/layout_goldar">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/positif"
                android:layout_width="95dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/rhesus_selector"
                android:button="@drawable/null_radio_button"
                android:elevation="2dp"
                android:gravity="center"
                android:outlineAmbientShadowColor="@color/red"
                android:text="POSITIF"
                style="@style/regular_black"/>

            <RadioButton
                android:id="@+id/negatif"
                android:layout_width="95dp"
                android:layout_height="50dp"
                android:background="@drawable/rhesus_selector"
                android:button="@drawable/null_radio_button"
                android:elevation="2dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:outlineAmbientShadowColor="@color/red"
                android:text="NEGATIF"
                style="@style/regular_black" />

            <RadioButton
                android:id="@+id/blank"
                android:layout_width="95dp"
                android:layout_height="50dp"
                android:background="@drawable/rhesus_selector"
                android:button="@drawable/null_radio_button"
                android:elevation="2dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:outlineAmbientShadowColor="@color/red"
                android:text="TIDAK TAHU"
                style="@style/regular_black" />
        </RadioGroup>
    </GridLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_last_donor"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:boxCornerRadiusBottomEnd="30dp"
        app:boxCornerRadiusBottomStart="30dp"
        app:boxCornerRadiusTopEnd="30dp"
        app:boxCornerRadiusTopStart="30dp"
        app:layout_constraintEnd_toEndOf="@+id/layout_rhesus"
        app:layout_constraintStart_toStartOf="@+id/layout_rhesus"
        app:layout_constraintTop_toBottomOf="@+id/layout_rhesus">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_last_donor"
            style="@style/regular_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Terakhir mendonor"
            android:inputType="date" />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/konfirmasi"
        style="@style/bold_white"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_red"
        android:text="Konfirmasi"
        android:layout_marginTop="123dp"
        app:layout_constraintEnd_toEndOf="@+id/layout_last_donor"
        app:layout_constraintStart_toStartOf="@+id/layout_last_donor"
        app:layout_constraintTop_toBottomOf="@+id/layout_last_donor" />
</androidx.constraintlayout.widget.ConstraintLayout>