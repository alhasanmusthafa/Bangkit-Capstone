<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DonorGo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_blood</item>
        <item name="colorPrimaryVariant">@color/child_red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/pretty_pink</item>
        <item name="android:windowBackground">@color/background_app</item>
    </style>

    <style name="ProggressBarStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="cardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="cardElevation">3dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>

    <style name="Theme.Dialog.Select" parent="Theme.MaterialComponents.DayNight.Dialog">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_blood</item>
        <item name="colorPrimaryVariant">@color/child_red</item>
        <item name="colorOnPrimary">@color/red_blood</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/pingky</item>
        <item name="android:windowBackground">@drawable/bg_dialog</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="roundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomLeft">7dp</item>
        <item name="cornerSizeBottomRight">7dp</item>
    </style>

    <style name="Theme.DonorGo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DonorGo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DonorGo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--    Typography    -->
    <style name="TextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/not_so_black</item>
    </style>

    <style name="HeaderText" parent="TextStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TitleText" parent="TextStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HeaderTextBold" parent="HeaderText">
        <item name="android:textStyle">bold</item>
    </style>

    <!--    Typography Black   -->
    <style name="extra_bold_black">
        <item name="android:fontFamily">@font/akrobat_extrabold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="semi_black">
        <item name="android:fontFamily">@font/akrobat_semibold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="bold_black">
        <item name="android:fontFamily">@font/akrobat_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="regular_black">
        <item name="android:fontFamily">@font/akrobat_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--    Typography White    -->
    <style name="extra_bold_white">
        <item name="android:fontFamily">@font/akrobat_extrabold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="semi_white">
        <item name="android:fontFamily">@font/akrobat_semibold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="bold_white">
        <item name="android:fontFamily">@font/akrobat_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="regular_white">
        <item name="android:fontFamily">@font/akrobat_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--    Typography Abu    -->
    <style name="extra_bold_grey">
        <item name="android:fontFamily">@font/akrobat_extrabold</item>
        <item name="android:textColor">@color/grey_soft</item>
    </style>

    <style name="semi_grey">
        <item name="android:fontFamily">@font/akrobat_semibold</item>
        <item name="android:textColor">@color/grey_soft</item>
    </style>

    <style name="bold_grey">
        <item name="android:fontFamily">@font/akrobat_bold</item>
        <item name="android:textColor">@color/grey_soft</item>
    </style>

    <style name="regular_grey">
        <item name="android:fontFamily">@font/akrobat_regular</item>
        <item name="android:textColor">@color/grey_soft</item>
    </style>

    <style name="big_title_black">
        <item name="android:fontFamily">@font/akrobat_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="big_title_white">
        <item name="android:fontFamily">@font/akrobat_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>