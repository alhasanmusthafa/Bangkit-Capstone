<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.edit_profile.EditProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/page_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="32dp"
                android:paddingBottom="20dp"
                android:outlineProvider="bounds"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_page_one"
                android:elevation="13dp">

                <TextView
                    android:id="@+id/title"
                    style="@style/extra_bold_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginHorizontal="28dp"
                    android:text="@string/taukah_kamu"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/content_desc"
                    style="@style/regular_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/desc" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/page_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginHorizontal="32dp"
                android:outlineProvider="bounds"
                android:paddingBottom="20dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_page_two"
                android:elevation="13dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_donor_detail"
                    style="@style/cardViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_info_donor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/cv_white_selector"
                        android:padding="15dp"
                        app:layout_constraintTop_toBottomOf="@id/cv_banner">

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/extra_bold_black"
                            android:textSize="18sp"
                            android:text="@string/natasya_salsabila"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/label_last_blood_donation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            style="@style/semi_black"
                            android:text="@string/last_donor"
                            app:layout_constraintBottom_toTopOf="@+id/label_can_donate_again"
                            app:layout_constraintStart_toStartOf="@id/username"
                            app:layout_constraintTop_toBottomOf="@id/username" />

                        <TextView
                            android:id="@+id/label_can_donate_again"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            style="@style/semi_black"
                            android:text="@string/can_donate"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@id/username"
                            app:layout_constraintTop_toBottomOf="@id/label_last_blood_donation" />

                        <TextView
                            android:id="@+id/last_blood_donation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="10dp"
                            style="@style/semi_grey"
                            tools:text="17 Agustus 2020"
                            app:layout_constraintEnd_toStartOf="@id/border"
                            app:layout_constraintBaseline_toBaselineOf="@id/label_last_blood_donation" />

                        <TextView
                            android:id="@+id/can_donate_again"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            style="@style/semi_grey"
                            tools:text="21 Desember 2020"
                            app:layout_constraintEnd_toStartOf="@id/border"
                            app:layout_constraintBaseline_toBaselineOf="@id/label_can_donate_again" />

                        <View
                            android:id="@+id/border"
                            android:layout_width="3dp"
                            android:layout_height="0dp"
                            android:layout_marginEnd="70dp"
                            android:background="@color/red_blood"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_blood_type"
                            style="@style/bold_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="13dp"
                            android:textSize="35sp"
                            app:layout_constraintStart_toEndOf="@id/border"
                            app:layout_constraintTop_toTopOf="@id/border"
                            app:layout_constraintBottom_toBottomOf="@id/border"
                            tools:text="AB" />

                        <TextView
                            android:id="@+id/reshus_dar"
                            style="@style/extra_bold_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@+id/tv_blood_type"
                            app:layout_constraintTop_toTopOf="@+id/tv_blood_type"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_blood_type"
                            tools:text="+"
                            android:textSize="30sp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_gender"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    app:boxCornerRadiusBottomEnd="5dp"
                    app:boxCornerRadiusBottomStart="5dp"
                    app:boxCornerRadiusTopEnd="5dp"
                    app:boxCornerRadiusTopStart="5dp"
                    android:layout_marginHorizontal="20dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/input_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:hint="@string/regency_city"
                        style="@style/regular_black"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/type_blood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:boxCornerRadiusBottomEnd="5dp"
                    app:boxCornerRadiusBottomStart="5dp"
                    app:boxCornerRadiusTopEnd="5dp"
                    app:boxCornerRadiusTopStart="5dp"
                    android:layout_marginHorizontal="20dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/input_goldar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:hint="@string/hospital"
                        style="@style/regular_black"/>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/page_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginHorizontal="32dp"
                android:outlineProvider="bounds"
                android:layout_marginBottom="40dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/white"
                android:elevation="13dp">

                <Button
                    android:id="@+id/donor"
                    style="@style/bold_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_pick_date"
                    android:text="@string/donor"
                    android:layout_gravity="center" />

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>