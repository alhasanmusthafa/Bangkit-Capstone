<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.edit_profile.EditProfileActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:id="@+id/page_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginHorizontal="25dp"
                    android:paddingBottom="20dp"
                    android:outlineProvider="bounds"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_page_one"
                    android:elevation="13dp">

                    <TextView
                        android:id="@+id/title"
                        style="@style/extra_bold_black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:layout_marginHorizontal="28dp"
                        android:text="@string/taukah_kamu"
                        android:textSize="32sp" />

                    <TextView
                        android:id="@+id/content_desc"
                        style="@style/regular_black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/desc" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_donor_detail"
                    android:layout_width="match_parent"
                    android:elevation="13dp"
                    app:cardElevation="13dp"
                    android:layout_marginHorizontal="25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_info_donor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/cv_white_selector"
                        android:padding="15dp"
                        app:layout_constraintTop_toBottomOf="@id/cv_banner">

                        <TextView
                            android:id="@+id/username"
                            style="@style/extra_bold_black"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/natasya_salsabila"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toStartOf="@id/border"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/label_last_blood_donation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            style="@style/semi_black"
                            android:text="@string/last_donor"
                            app:layout_constraintBottom_toTopOf="@+id/label_can_donate_again"
                            app:layout_constraintStart_toStartOf="@id/username"
                            app:layout_constraintTop_toBottomOf="@id/username" />

                        <TextView
                            android:id="@+id/label_can_donate_again"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            style="@style/semi_black"
                            android:text="@string/can_donate"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@id/username"
                            app:layout_constraintTop_toBottomOf="@id/label_last_blood_donation" />

                        <TextView
                            android:id="@+id/last_blood_donation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="10dp"
                            style="@style/semi_grey"
                            tools:text="17 Agustus 2020"
                            app:layout_constraintEnd_toStartOf="@id/border"
                            app:layout_constraintBaseline_toBaselineOf="@id/label_last_blood_donation" />

                        <TextView
                            android:id="@+id/can_donate_again"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            style="@style/semi_grey"
                            tools:text="21 Desember 2020"
                            app:layout_constraintEnd_toStartOf="@id/border"
                            app:layout_constraintBaseline_toBaselineOf="@id/label_can_donate_again" />

                        <View
                            android:id="@+id/border"
                            android:layout_width="3dp"
                            android:layout_height="0dp"
                            android:layout_marginEnd="60dp"
                            android:background="@color/red_blood"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_blood_type"
                            style="@style/bold_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="13dp"
                            android:textSize="35sp"
                            app:layout_constraintStart_toEndOf="@id/border"
                            app:layout_constraintTop_toTopOf="@id/border"
                            app:layout_constraintBottom_toBottomOf="@id/border"
                            tools:text="AB" />

                        <TextView
                            android:id="@+id/reshus_dar"
                            style="@style/extra_bold_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@+id/tv_blood_type"
                            app:layout_constraintTop_toTopOf="@+id/tv_blood_type"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_blood_type"
                            tools:text="+"
                            android:textSize="30sp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/page_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="25dp"
                    android:outlineProvider="bounds"
                    android:paddingBottom="20dp"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_page_two"
                    android:elevation="13dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/province_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        app:boxCornerRadiusBottomEnd="5dp"
                        app:boxCornerRadiusBottomStart="5dp"
                        app:boxCornerRadiusTopEnd="5dp"
                        app:boxCornerRadiusTopStart="5dp"
                        android:layout_marginHorizontal="20dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                        <AutoCompleteTextView
                            android:id="@+id/input_province"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:hint="@string/province"
                            style="@style/regular_black"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_city"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="5dp"
                        app:boxCornerRadiusBottomEnd="5dp"
                        app:boxCornerRadiusBottomStart="5dp"
                        app:boxCornerRadiusTopEnd="5dp"
                        app:boxCornerRadiusTopStart="5dp"
                        android:layout_marginHorizontal="20dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                        <AutoCompleteTextView
                            android:id="@+id/input_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:hint="@string/regency_city"
                            style="@style/regular_black"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/hospital"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        app:boxCornerRadiusBottomEnd="5dp"
                        app:boxCornerRadiusBottomStart="5dp"
                        app:boxCornerRadiusTopEnd="5dp"
                        app:boxCornerRadiusTopStart="5dp"
                        android:layout_marginHorizontal="20dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                        <AutoCompleteTextView
                            android:id="@+id/input_hospital"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:hint="@string/hospital"
                            style="@style/regular_black"/>

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/announcement"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:text="@string/can_donate_again"
                    android:textColor="@color/red_blood"/>

                <com.example.donorgo.customview.MyCustomButton
                    android:id="@+id/btn_donor"
                    android:elevation="13dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginBottom="40dp"
                    android:text="DONOR"
                    android:enabled="true"/>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBar"
                style="@style/ProggressBarStyle"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>