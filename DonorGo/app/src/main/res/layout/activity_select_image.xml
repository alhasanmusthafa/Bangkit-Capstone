<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.camera.SelectImageActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/white">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="20dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_photo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="5dp"
                    app:cardElevation="0dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="10dp" >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/content_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:src="@drawable/picture_empty"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/button_camera"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="24dp"
                    android:paddingVertical="8dp"
                    android:layout_marginTop="15dp"
                    android:paddingHorizontal="35dp"
                    android:gravity="center"
                    android:background="@drawable/button_background_rounded"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="@id/btn_continue"
                    app:layout_constraintTop_toBottomOf="@id/card_photo"
                    app:layout_constraintEnd_toStartOf="@+id/button_gallery"
                    app:layout_constraintHorizontal_chainStyle="spread_inside">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_camera"
                        android:layout_margin="4dp"
                        android:fontFamily="@font/akrobat_bold"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/button_gallery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="24dp"
                    android:paddingHorizontal="35dp"
                    android:paddingVertical="8dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:background="@drawable/button_background_rounded"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toEndOf="@+id/button_camera"
                    app:layout_constraintTop_toBottomOf="@id/card_photo"
                    app:layout_constraintEnd_toEndOf="@id/btn_continue"
                    app:layout_constraintHorizontal_chainStyle="spread_inside">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_gallery"
                        android:layout_margin="4dp"
                        android:fontFamily="@font/akrobat_bold"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <com.example.donorgo.customview.MyCustomButton
                    android:id="@+id/btn_continue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:customText="@string/btn_continue"
                    android:enabled="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toBottomOf="@id/button_camera"
                    app:layout_constraintStart_toStartOf="@id/card_photo"
                    app:layout_constraintEnd_toEndOf="@id/card_photo"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    app:layout_constraintTop_toBottomOf="@id/btn_continue"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/card_select"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>