<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.detail_request.DetailRequestActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/background_app"
        android:paddingStart="@dimen/margin_start_toolbar"
        android:paddingEnd="@dimen/margin_start_end"
        android:elevation="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_back"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginStart="3dp"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/bt_back_arrow"
            android:paddingTop="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_toolbarTitle"
            android:text="Detail Request"
            style="@style/extra_bold_black"
            android:textSize="20sp"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/wrapper"
                android:layout_height="wrap_content"
                android:layout_width="350dp"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/wrapper_detail_request"
                android:elevation="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/atas"
                    android:layout_height="100dp"
                    android:layout_width="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/header_wrapper_detail_request"
                    android:padding="@dimen/spacing_8"
                    android:elevation="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_goldar"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_marginStart="@dimen/spacing_8"
                        app:cardCornerRadius="5dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/goldar"
                                    style="@style/bold_black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    tools:text="AB"
                                    android:textSize="30sp" />

                                <TextView
                                    android:id="@+id/rhesus"
                                    style="@style/bold_black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="0dp"
                                    tools:text="+"
                                    android:textSize="30sp" />

                            </LinearLayout>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/patient_name"
                        style="@style/extra_bold_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="@dimen/spacing_8"
                        android:text="@string/pasient_name"
                        android:textSize="24sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/cv_goldar"
                        app:layout_constraintTop_toTopOf="@+id/cv_goldar" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-20dp"
                        app:layout_constraintBottom_toBottomOf="@+id/cv_goldar"
                        app:layout_constraintStart_toStartOf="@+id/patient_name"
                        app:layout_constraintTop_toBottomOf="@+id/patient_name">

                        <TextView
                            android:id="@+id/tv_kantong"
                            style="@style/semi_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:text="@string/banyak_yang_dibutuhkan"
                            app:layout_constraintBottom_toBottomOf="@+id/cv_goldar"
                            app:layout_constraintStart_toStartOf="@+id/close_family_value_pasien"
                            app:layout_constraintTop_toBottomOf="@+id/close_family_value_pasien"/>

                        <TextView
                            android:id="@+id/jml_kantong"
                            style="@style/bold_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginStart="@dimen/spacing_8"
                            android:text="@string/_3"
                            app:layout_constraintBottom_toBottomOf="@+id/cv_goldar"
                            app:layout_constraintStart_toStartOf="@+id/close_family_value_pasien"
                            app:layout_constraintTop_toBottomOf="@+id/close_family_value_pasien"/>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/label_lokasi"
                    style="@style/extra_bold_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="20dp"
                    android:text="@string/location"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/atas" />

                <TextView
                    android:id="@+id/location_value"
                    style="@style/regular_black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="20dp"
                    android:justificationMode="inter_word"
                    android:padding="10dp"
                    android:text="@string/rsud_mandau"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@id/label_lokasi"
                    app:layout_constraintTop_toTopOf="@+id/label_lokasi"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/address_label"
                    style="@style/extra_bold_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginTop="-10dp"
                    android:layout_marginStart="20dp"
                    android:text="@string/address"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/location_value" />

                <TextView
                    android:id="@+id/address_value"
                    style="@style/regular_black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:padding="10dp"
                    android:layout_marginEnd="20dp"
                    android:text="@string/jl_stadion_no_10_duri_bengkalis"
                    android:textSize="14sp"
                    android:layout_marginStart="100dp"
                    app:layout_constraintStart_toStartOf="@id/address_label"
                    app:layout_constraintTop_toTopOf="@+id/address_label"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/description_label"
                    style="@style/extra_bold_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/description"
                    android:textSize="14sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="-10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/address_value" />

                <TextView
                    android:id="@+id/description_value"
                    style="@style/regular_black"
                    android:layout_width="0dp"
                    android:layout_marginEnd="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:justificationMode="inter_word"
                    android:padding="10dp"
                    android:text="@string/example_request_description"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@id/description_label"
                    app:layout_constraintTop_toTopOf="@+id/description_label"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/close_family_label"
                    style="@style/extra_bold_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="-10dp"
                    android:text="@string/close_family"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/description_value" />

                <TextView
                    android:id="@+id/close_family_value"
                    style="@style/regular_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:justificationMode="inter_word"
                    android:text="@string/nelly_agustin"
                    android:padding="10dp"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@id/close_family_label"
                    app:layout_constraintTop_toTopOf="@+id/close_family_label" />

                <TextView
                    android:id="@+id/phone"
                    style="@style/regular_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:padding="10dp"
                    android:layout_marginTop="-15dp"
                    android:text="@string/number_phone"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/close_family_value"
                    app:layout_constraintTop_toBottomOf="@+id/close_family_value" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    app:layout_constraintTop_toBottomOf="@id/phone"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_terms_and_conditions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/wrapper" />

            <Button
                android:id="@+id/donor"
                style="@style/bold_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_pick_date"
                android:text="@string/donor"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="32dp"
                android:layout_gravity="center"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_terms_and_conditions" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>