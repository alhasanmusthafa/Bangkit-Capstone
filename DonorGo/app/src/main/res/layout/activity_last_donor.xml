<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.camera.SelectImageActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_banner"
                    android:layout_width="match_parent"
                    android:layout_height="171dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginStart="@dimen/margin_start_end"
                    android:layout_marginEnd="@dimen/margin_start_end"
                    android:elevation="10dp"
                    app:cardCornerRadius="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/img_banner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_event"

                        />

                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:id="@+id/wrapper_last_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="21dp"
                    android:layout_gravity="start"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:id="@+id/icon_calender2"
                        android:layout_width="30dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginStart="15dp"
                        android:src="@drawable/calender" />

                    <LinearLayout
                        android:id="@+id/linear_layout_lastdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="20dp"
                        android:layout_toEndOf="@id/icon_calender2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/label_lastDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last Donor Date"
                            android:layout_marginTop="10dp"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/value_lastDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="28 Desember 2020"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_pick_lastDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="60dp"
                        android:layout_toEndOf="@id/linear_layout_lastdate"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="2dp"
                        android:background="@drawable/bg_pick_date"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pick Date"
                            android:layout_margin="4dp"
                            android:fontFamily="@font/akrobat_extrabold"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/blood_rhesus"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    style="@style/extra_bold_black"
                    android:textSize="16sp"/>

                <GridLayout
                    android:id="@+id/layout_rhesus"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="32dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:alignmentMode="alignMargins"
                    android:columnCount="3"
                    android:columnOrderPreserved="false"
                    android:rowCount="1">

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <RadioButton
                            android:id="@+id/positif"
                            android:layout_width="95dp"
                            android:layout_height="50dp"
                            android:layout_marginEnd="15dp"
                            android:background="@drawable/rhesus_selector"
                            android:button="@drawable/null_radio_button"
                            android:elevation="2dp"
                            android:gravity="center"
                            android:outlineAmbientShadowColor="@color/red_blood"
                            android:text="Positif"
                            style="@style/bold_black"/>

                        <RadioButton
                            android:id="@+id/negatif"
                            android:layout_width="95dp"
                            android:layout_height="50dp"
                            android:background="@drawable/rhesus_selector"
                            android:button="@drawable/null_radio_button"
                            android:elevation="2dp"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:outlineAmbientShadowColor="@color/red_blood"
                            android:text="Negatif"
                            style="@style/bold_black" />

                        <RadioButton
                            android:id="@+id/blank"
                            android:layout_width="95dp"
                            android:layout_height="50dp"
                            android:background="@drawable/rhesus_selector"
                            android:button="@drawable/null_radio_button"
                            android:elevation="2dp"
                            android:layout_marginStart="15dp"
                            android:gravity="center"
                            android:outlineAmbientShadowColor="@color/red_blood"
                            android:text="Unknown"
                            style="@style/bold_black" />
                    </RadioGroup>

                </GridLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_goldar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    app:boxCornerRadiusBottomEnd="5dp"
                    app:boxCornerRadiusBottomStart="5dp"
                    app:boxCornerRadiusTopEnd="5dp"
                    app:boxCornerRadiusTopStart="5dp"
                    android:layout_marginHorizontal="32dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/input_goldar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:hint="Blood Type"
                        style="@style/regular_black"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.example.donorgo.customview.MyCustomButton
                    android:id="@+id/bt_continue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:customText="@string/btn_continue"
                    android:enabled="true"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="30dp"
                    app:layout_constraintTop_toBottomOf="@id/button_camera"
                    app:layout_constraintStart_toStartOf="@id/card_photo"
                    app:layout_constraintEnd_toEndOf="@id/card_photo"/>


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/card_select"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>